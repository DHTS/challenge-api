{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.(t|j)s",
        "!**/*.spec.(t|j)s",
        "!**/node_modules/**",
        "!**/dist/**",
        "!src/main.ts",
        "!src/app/app.module.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
        "global": {
            "statements": 3,
            "branches": 3,
            "functions": 3,
            "lines": 3
        }
    }
}
